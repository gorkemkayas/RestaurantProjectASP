@page
@model deneme.Pages.LoginModel
@{
    Layout = "_LoginLayout";
}
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Custom Styling</title>
    <style>
        .custom-input {
            background-color: #2c2c2c;
            color: #ffffff;
        }

            .custom-input::placeholder {
                color: #aaaaaa;
                opacity: 0.8;
            }

            .custom-input:focus {
                background-color: #333333;
                color: #ffffff;
                box-shadow: 0 0 8px rgba(255, 99, 132, 0.5);
                outline: none;
            }
    </style>
</head>

<div class="m-0 p-0 d-flex" style="height:960px;">
    <div class="flex-fill position-relative">
        <div class="position-relative" style="height: 100vh;">
            <video class="video-background" autoplay muted loop>
                <source src="/img/video.mp4" type="video/mp4">
                Tarayıcınız video etiketini desteklemiyor.
            </video>
        </div>
    </div>

    <div class="col-md-4 d-flex align-items-center justify-content-center" style="background-color:black">
        <div class="form-container p-4 rounded border border-dark p-1" style="background-color:#111111">
            <h3 class="text-center text-white">
                <i class="bi bi-alipay fs-2 me-3 text-danger small"></i>Sign in
            </h3>
            <form class="mt-4">
                <div class="form-group mb-3">
                    <label class="text-white-50 mb-2" for="email">Email address</label>
                    <input type="email" class="custom-input form-control mb-1" id="email" placeholder="Enter mail address...">
                    <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                </div>
                <div class="form-group mb-3">
                    <label class="text-white-50 mb-2" for="exampleInputPassword1">Password</label>
                    <input type="password" class="custom-input form-control" id="exampleInputPassword1" placeholder="Enter the password...">
                </div>
                <button type="submit" class="btn btn-outline-danger w-100">Sign in</button>
            </form>
        </div>
    </div>
</div>


